if (( $# < 1 )); then
  echo "Usage: $0 \"path_download_to url_download_from\" (can be repeated)" >&2
  exit 1
fi

for pair in "$@"; do
  read path url <<< "$pair"
  wget -q -O $path $url
done

# Always exit with 0 as we do not track wget return codes and should not rely
# on the latest command execution.
exit 0
